{
	"manifest_version": 2,

	"name": "Ethical Ad Block",
	"description": "Block only fraudulent, malicious, and resource taxing ads.",
	"version": "0.1",

	"icons": {
		"48": "icon_48.png",
		"128": "icon_128.png"
	},

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js":      ["content.js", "md5.js"]
	}],

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	]
}
