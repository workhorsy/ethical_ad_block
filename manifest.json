{
	"manifest_version": 2,

	"name": "Ethical Ad Block",
	"description": "Block only fraudulent, malicious, and resource taxing ads.",
	"version": "0.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"matches": ["*://*/*"],
		"js":      ["content.js"]
	}],

	"permissions": [
		"activeTab"
	]
}
